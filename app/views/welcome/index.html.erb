<div class="welcome-box">
  <!--===== 廣告輪播 =====-->
  <section class="intro-box">
    <div class="row">
      <div class="col-md-12">
        <div id="intro" class="carousel slide" data-ride="carousel">

          <div class="carousel-inner" role="listbox">
                          <div class="item">
                          <a target="_blank" href="#">
                            <img src="http://oswxi8llp.bkt.clouddn.com/L1280_meitu_1.jpg" alt="15724649 611709642332724 2416762193727451519 o">
                            <div class="carousel-caption">
                              <h3>热带别墅</h3>
                              <p>返璞归真，亲近自然</p>
                            </div>
          </a>              </div>
                          <div class="item active">
                          <a target="_blank" href="#">
                            <img src="http://oswxi8llp.bkt.clouddn.com/L1280_meitu_2.jpg" alt="Content 356baf4a 99f9 46ca ad7c 8c6a46863b8f">
                            <div class="carousel-caption">
                              <h3>屋内一角</h3>
                              <p>室内对别样风格</p>
                            </div>
          </a>              </div>
                          <div class="item">
                          <a target="_blank" href="#">
                            <img src="http://oswxi8llp.bkt.clouddn.com/L1280_meitu_3.jpg" alt="Pexels photo 57750">
                            <div class="carousel-caption">
                              <h3>亭台楼阁</h3>
                              <p>纯实木打造，质朴无华</p>
                            </div>
          </a>              </div>
                          <div class="item">
                          <a target="_blank" href="#">
                            <img src="http://oswxi8llp.bkt.clouddn.com/L1280_meitu_4_meitu_6.jpg" alt="Pexels photo 243071">
                            <div class="carousel-caption">
                              <h3>冰天雪地</h3>
                              <p>长白山景区独家打造</p>
                            </div>
          </a>              </div>
                    </div>

          <a class="left carousel-control" href="#intro" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#intro" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!--===== 品牌故事 =====-->
  <section class="story-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2><%= t('th-j-and-a-select') %></h2>
        <h1><%= t('th-j-and-a') %></h1>
        <div class="short-line"></div>
        <div class="row">
          <div class="col-md-3 col-md-offset-1">
            <%= image_tag("jimmy.jpg") %>
          </div>
          <div class="col-md-7">
            <h3><%= t('th-jimmy') %></h3>
            <p><%= t('about-jimmy') %></p>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-7 col-md-offset-1">
            <h3><%= t('th-anndo') %></h3>
            <p><%= t('about-anndo') %></p>
          </div>
          <div class="col-md-3">
            <%= image_tag("anndo.jpg") %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!--===== 商品類型 =====-->
  <section class="categories-box">
    <div class="row">
      <div class="col-md-4 category-content">
        <%= link_to '' , class: "category_1" do %>
          <div class="category-box">
            <%= image_tag("category_1.jpg") %>
          </div>
          <div>
            <h3><%= t('th-desk') %></h3>
            <p><%= t('slogan-desk') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to '' , class: "category_2" do %>
          <div class="category-box">
            <%= image_tag("category_2.jpg") %>
          </div>
          <div>
            <h3><%= t('th-home') %></h3>
            <p><%= t('slogan-home') %></p>
          </div>
        <% end %>
      </div>
      <div class="col-md-4 category-content">
        <%= link_to '' , class: "category_3" do %>
          <div class="category-box">
            <%= image_tag("category_3.jpg") %>
          </div>
          <div>
            <h3><%= t('th-accessories') %></h3>
            <p><%= t('slogan-accessories') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </section>


  <!--===== 合作品牌 =====-->
  <section class="brand-box">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <h2><%= t('th-brands') %></h2>
        <div class="short-line"></div>
        <%= image_tag("brand_1.png") %>
        <%= image_tag("brand_2.png") %>
        <%= image_tag("brand_3.png") %>
        <%= image_tag("brand_4.png") %>
        <%= image_tag("brand_5.png") %>
        <%= image_tag("brand_6.png") %>
        <%= image_tag("brand_7.png") %>
        <%= image_tag("brand_8.png") %>
        <%= image_tag("brand_9.png") %>
      </div>
    </div>
  </section>

  <!--===== 立即購買 =====-->
  <section class="push-box">

  </section>

  <!--===== Go top（回到頂端） =====-->
  <div class="goTop">
    <span class="fa fa-chevron-up"></span>
  </div>
</div>
